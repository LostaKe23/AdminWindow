<Window x:Class="Exam.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid Background="#3E97D1">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="600" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="Gray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Добро Пожаловать!" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>
                <Label Content="Логин"/>
                <TextBox x:Name="loginTextBox" Width="500" Height="30"/>
                <Label Content="Пароль"/>
                <PasswordBox x:Name="passTextBox" Width="500" Height="30"/>
                <Label Content="Повторите Пароль"/>
                <PasswordBox x:Name="passwordTextBox" Width="500" Height="30"/>
                <Label Content="Email"/>
                <TextBox x:Name="emailTextBox" Width="500" Height="30"/>
                <Grid Margin="20 20 20 20">
                    <Button Content="Зарегистрировать" Width="180" Height="30" Click="Button_Reg_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="Gray" Direction="320"/>
                        </Button.Effect>
                    </Button>
                </Grid>
                
            </StackPanel>
        </Border>

    </Grid>
</Window>
